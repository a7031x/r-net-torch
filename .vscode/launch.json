    "version": "0.2.0",
    "configurations": [
        {
            "name": "current file",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "preprocess",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/preprocess.py",
            "args": [
                "-dataset", "squad"
            ]
        },
        {
            "name": "train chinese",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "-char_limit", "6"
            ]
        },
        {
            "name": "train english",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "-char_limit", "16"
            ]
        },
        {
            "name": "evaluate chinese",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/evaluate.py",
            "args": [
                "-char_limit", "6",
                "-batch_size", "30",
                "-max_passage_tokens", "1000"
            ]
        }
    ]
}